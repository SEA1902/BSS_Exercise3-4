    <route url="/bss/training/posts/" method="POST">
        <service class="Bss\Training\Api\BssPostInterface" method="setData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/bss/training/posts/" method="GET">
        <service class="Bss\Training\Api\BssPostInterface" method="getData"/>
